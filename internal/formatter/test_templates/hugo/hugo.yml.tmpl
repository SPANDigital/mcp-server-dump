# Hugo Configuration for {{ .Name }}
# Generated by mcp-server-dump (test)

# Basic site settings
{{- if .HugoConfig.BaseURL }}
baseURL: '{{ .HugoConfig.BaseURL }}'
{{- else }}
# baseURL: 'https://your-site.com'  # Set your site's URL
{{- end }}

{{- if .HugoConfig.LanguageCode }}
languageCode: '{{ .HugoConfig.LanguageCode }}'
{{- else }}
languageCode: 'en-us'
{{- end }}

title: '{{ .Name }} Documentation'
description: 'Documentation for {{ .Name }}{{ if .Version }} v{{ .Version }}{{ end }}'

# Theme configuration
{{- if .HugoConfig.Theme }}
theme: '{{ .HugoConfig.Theme }}'
{{- else }}
theme: 'ananke'  # Default theme
{{- end }}

# Content and publishing settings
contentDir: 'content'
publishDir: 'public'
staticDir: 'static'

# Markup settings for better rendering
markup:
  goldmark:
    renderer:
      unsafe: true
  highlight:
    style: github
    lineNos: true
    codeFences: true

# Site parameters
params:
  show_reading_time: true
  read_more_copy: "Read more"
  recent_posts_number: 5

  {{- if .HugoConfig.Github }}
  github: "{{ .HugoConfig.Github }}"
  {{- end }}
  {{- if .HugoConfig.Twitter }}
  twitter: "{{ .HugoConfig.Twitter }}"
  {{- end }}

  {{- if .HugoConfig.SiteLogo }}
  site_logo: "{{ .HugoConfig.SiteLogo }}"
  {{- end }}
  description: "Documentation for {{ .Name }}{{ if .Version }} v{{ .Version }}{{ end }}"

  mcp_server_name: "{{ .Name }}"
  {{- if .Version }}
  mcp_server_version: "{{ .Version }}"
  {{- end }}

  {{- if .Capabilities.Tools }}
  has_tools: true
  tools_count: {{ len .Tools }}
  {{- end }}
  {{- if .Capabilities.Resources }}
  has_resources: true
  resources_count: {{ len .Resources }}
  {{- end }}
  {{- if .Capabilities.Prompts }}
  has_prompts: true
  prompts_count: {{ len .Prompts }}
  {{- end }}

# Navigation menu
menu:
  main:
    - name: "Home"
      url: "/"
      weight: 1
    {{- if .Tools }}
    - name: "Tools"
      url: "/tools/"
      weight: 10
    {{- end }}
    {{- if .Resources }}
    - name: "Resources"
      url: "/resources/"
      weight: 20
    {{- end }}
    {{- if .Prompts }}
    - name: "Prompts"
      url: "/prompts/"
      weight: 30
    {{- end }}

# Taxonomies
taxonomies:
  category: categories
  tag: tags

# Build settings
build:
  writeStats: true

# Privacy settings
privacy:
  disqus:
    disable: true
  googleAnalytics:
    disable: true
    respectDoNotTrack: true
    anonymizeIP: true

# Security settings
security:
  enableInlineShortcodes: false
  exec:
    allow: ['^dart-sass-embedded$', '^go$', '^npx$', '^postcss$']
    osEnv: ['(?i)^((HTTPS?|NO)_PROXY|PATH(EXT)?|APPDATA|TE?MP|TERM|GO\w+|(XDG_)?CACHE_HOME|YARN_CACHE_FOLDER)$']

# Output formats
outputs:
  home: ["HTML", "RSS", "JSON"]
  page: ["HTML"]
  section: ["HTML", "RSS"]